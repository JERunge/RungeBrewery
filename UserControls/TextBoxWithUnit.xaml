<UserControl x:Class="BrewUI.UserControls.TextBoxWithUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrewUI.UserControls"
             mc:Ignorable="d" >
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Path=BoxLabel}" Grid.Column="0"/>
        <TextBox Text="{Binding Path=BoxValue}" Grid.Column="2"/>
        <TextBlock Text="{Binding Path=BoxUnit}" Style="{StaticResource UnitBlock}" Grid.Column="3"/>
    </Grid>
</UserControl>
